<!DOCTYPE html>
<html>
<head>
  <title>Mock Elections</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<div id="navbar" class="container-fluid">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class = "navbar-brand">Election App</a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Candidates<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "All Candidates", candidates_path %></li>
            <li><%= link_to "Add Candidate", new_candidate_path %></li>
            <li><%= link_to "Add Position", new_position_path %><li>
          </ul>
        </li>        
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        Logged in as <strong> <%= current_user.email %></strong>
      	<li><%= link_to "Home", root_path %></li>
      	<li><%= link_to "Vote", new_path %></li>
        <li><%= link_to "About Us", about_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Profile<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li role="separator" class="divider"></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-success" %></li>
          </ul>
        </li>
        <%= image_tag current_user.gravatar_url %>
        <% else %>

        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About Us", about_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Be Heard<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#"></a></li>
            <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Register", new_user_registration_path, :class => 'navbar-link' %></li>
          </ul>
        </li>
        <% end %>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
</div>

<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <!--<h1>Hello<%= " #{current_user.email}" if !current_user.nil? %>!</h1>-->

<%= yield %>

</body>
</html>
