<h1>LIST OF CANDIDATES</h1>

<% @positions.each do |p| %>
    <h2><%= p.name %></h2>
    <table class = "table">
      <thead>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Votes</th>
      </thead>
    <% p.candidates.each do |c| %>
       <tr>
        <td><%= c.last_name %></td>
        <td><%= c.first_name %></td>
        <td><%= c.votes.size %></td>
       </tr>
    <% end %>
    </table>
<% end %>
